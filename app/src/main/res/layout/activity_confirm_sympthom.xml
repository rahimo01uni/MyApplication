<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/Card"
        android:layout_width="346dp"
        android:layout_height="407dp"
        android:layout_gravity="center"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/CardRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <Button
                    android:id="@+id/btn_SyCancel"
                    android:layout_width="121dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_red"
                    android:text="Cancel"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_SConfirm"
                    app:layout_constraintHorizontal_bias="0.82"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/drawable_test" />

                <Button
                    android:id="@+id/btn_SyConfirm"
                    android:layout_width="121dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/btn_blue"
                    android:text="Confirm"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/btn_SyCancel"
                    app:layout_constraintTop_toBottomOf="@+id/drawable_test" />

                <EditText
                    android:id="@+id/txt_regular"
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:hint="Regular EditText"
                    android:padding="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TB_confuse" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/btn_simpleborder"
                    android:gravity="center|center_vertical"
                    android:text="How is your mood?"
                    android:textColor="@color/Black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/drawable_test"
                    android:layout_width="280dp"
                    android:layout_height="156dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.534"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_regular" />

                <ToggleButton
                    android:id="@+id/TB_love"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_love"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_Smile"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_smile"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toEndOf="@+id/TB_love"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_confuse"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_confuse"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toEndOf="@+id/TB_Smile"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_sad"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_sad"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toEndOf="@+id/TB_confuse"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_sick"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_sick"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toEndOf="@+id/TB_sad"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_sleep"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_sleep"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.086"
                    app:layout_constraintStart_toEndOf="@+id/TB_sick"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>