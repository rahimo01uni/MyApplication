<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"

android:layout_width="match_parent"
android:layout_height="match_parent"
android:clipChildren="false"
android:clipToPadding="false"
android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/Card"
        android:layout_width="363dp"
        android:layout_height="447dp"
        android:layout_gravity="center"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/CardRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <Button
                    android:id="@+id/btn_SCancel"
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_red"
                    android:text="Cancel"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_SConfirm"
                    app:layout_constraintHorizontal_bias="0.614"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/drawable_test" />

                <Button
                    android:id="@+id/btn_SConfirm"
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="64dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_blue"
                    android:text="Confirm"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/drawable_test"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/txt_regular"
                    android:layout_width="280dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="12dp"
                    android:hint="Regular EditText"
                    android:padding="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TB_confuse" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/btn_simpleborder"
                    android:gravity="center|center_vertical"
                    android:text="How did you sleep?"
                    android:textColor="@color/Black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/drawable_test"
                    android:layout_width="280dp"
                    android:layout_height="113dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_simpleborder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.54"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_Sleepduration" />

                <ToggleButton
                    android:id="@+id/TB_love"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_love"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_Smile"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_smile"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toEndOf="@+id/TB_love"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_confuse"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_confuse"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toEndOf="@+id/TB_Smile"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_sad"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_sad"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toEndOf="@+id/TB_confuse"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_sick"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_sick"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintStart_toEndOf="@+id/TB_sad"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/TB_sleep"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_sleep"
                    android:checked="true"
                    android:textColor="#FFEB3B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.086"
                    app:layout_constraintStart_toEndOf="@+id/TB_sick"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/txt_SleepHour"
                    android:layout_width="280dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_simpleborder"
                    android:drawableRight="@drawable/ic_clock_three"
                    android:text="Sleep Hour"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_regular" />

                <TextView
                    android:id="@+id/txt_Sleepduration"
                    android:layout_width="280dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_simpleborder"
                    android:text="Sleep Duration"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.512"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_SleepHour" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
