<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reminder.AddReminderActivity">

    <Button
        android:id="@+id/btn_medication"
        android:layout_width="166dp"
        android:layout_height="49dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_blue"
        android:drawableLeft="@drawable/ic_medicine"
        android:padding="16dp"
        android:text="Medication"
        android:textColor="@color/bpWhite"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_sym"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sleep"
        android:layout_width="166dp"
        android:layout_height="49dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_simple"
        android:drawableLeft="@drawable/ic_measure"
        android:padding="16dp"
        android:text="Sleep"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_sym"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_medication" />

    <Button
        android:id="@+id/btn_sym"
        android:layout_width="166dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/btn_simple"
        android:drawableLeft="@drawable/ic_smile"
        android:padding="16dp"
        android:text="Symptom check"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/Card"
        android:layout_width="339dp"
        android:layout_height="562dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/CardRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sleep">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txt_EDate"
                android:layout_width="123dp"
                android:layout_height="46dp"
                android:layout_marginStart="189dp"
                android:layout_marginBottom="345dp"
                android:background="@drawable/btn_simpleborder"
                android:drawableRight="@drawable/ic_calender"
                android:text="End Date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt_Time"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_simpleborder"
                android:drawableRight="@drawable/ic_clock_three"
                android:text="Add Time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toEndOf="@+id/txt_Period"
                app:layout_constraintTop_toBottomOf="@+id/txt_EDate" />

            <TextView
                android:id="@+id/txt_Period"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="241dp"
                android:background="@drawable/btn_simpleborder"
                android:drawableRight="@drawable/ic_angle_down"
                android:text="Frequency"
                app:layout_constraintBottom_toBottomOf="@+id/txt_Time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_Count"
                android:layout_width="104dp"
                android:layout_height="42dp"
                android:background="@drawable/btn_simpleborder"
                android:drawableRight="@drawable/ic_angle_down"
                android:text="Doze"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="117dp" />

            <TextView
                android:id="@+id/txt_unit"
                android:layout_width="121dp"
                android:layout_height="43dp"
                android:layout_marginStart="191dp"
                android:layout_marginTop="116dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/btn_simpleborder"
                android:drawableRight="@drawable/ic_angle_down"
                android:text="Unit"
                android:textColor="@color/ampm_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_SDate"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="178dp"
                android:layout_marginBottom="345dp"
                android:background="@drawable/btn_simpleborder"
                android:drawableRight="@drawable/ic_calender"
                android:text="Start Date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/txt_desc"
                android:layout_width="281dp"
                android:layout_height="42dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="67dp"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="453dp"
                android:background="@drawable/btn_simpleborder"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="281dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_blue"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                tools:layout_editor_absoluteX="29dp" />

            <EditText
                android:id="@+id/txt_medicationname"
                android:layout_width="281dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="504dp"
                android:background="@drawable/btn_simpleborder"
                android:ems="10"
                android:hint="Medication Name"
                android:inputType="textPersonName"
                android:text="Medicine Name"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="311dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_Time" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>