<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_sharetype"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/btn_simpleborder"
        android:drawableRight="@drawable/ic_angle_down"
        android:text="Automative Sharing"
        android:textColor="@color/ampm_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_shareDate"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_simpleborder"
        android:drawableRight="@drawable/ic_calender"
        android:text="Start Date - End Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sharetype" />

    <Button
        android:id="@+id/btn_SahreSend"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/btn_blue"
        android:text="Send"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_SahreSave"
        app:layout_constraintTop_toBottomOf="@+id/txt_shareDate"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/btn_SahreSave"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_blue"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_SahreSend"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_shareDate"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="DuplicateIds" />


</androidx.constraintlayout.widget.ConstraintLayout>