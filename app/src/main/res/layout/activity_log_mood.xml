<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.health.myapplication.Log.LogMoodActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/Card"
        android:layout_width="351dp"
        android:layout_height="497dp"
        android:layout_gravity="center"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/CardRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ToggleButton
                android:id="@+id/TB_love"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:background="@drawable/ic_love"
                android:textColor="#FFEB3B"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="36dp" />

            <ToggleButton
                android:id="@+id/TB_Smile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/ic_smile"
                android:checked="true"
                android:textColor="#FFEB3B"
                app:layout_constraintStart_toEndOf="@+id/TB_love"
                tools:layout_editor_absoluteY="36dp" />

            <ToggleButton
                android:id="@+id/TB_confuse"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/ic_confuse"
                android:checked="true"
                android:textColor="#FFEB3B"
                app:layout_constraintStart_toEndOf="@+id/TB_Smile"
                tools:layout_editor_absoluteY="36dp" />

            <ToggleButton
                android:id="@+id/TB_sad"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/ic_sad"
                android:checked="true"
                android:textColor="#FFEB3B"
                app:layout_constraintStart_toEndOf="@+id/TB_confuse"
                tools:layout_editor_absoluteY="36dp" />


            <ToggleButton
                android:id="@+id/TB_sick"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/ic_sick"
                android:checked="true"
                android:textColor="#FFEB3B"
                app:layout_constraintStart_toEndOf="@+id/TB_sad"
                tools:layout_editor_absoluteY="36dp" />

            <ToggleButton
                android:id="@+id/TB_sleep"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/ic_sleep"
                android:checked="true"
                android:textColor="#FFEB3B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toEndOf="@+id/TB_sick"
                tools:layout_editor_absoluteY="36dp" />

            <TextView
                android:id="@+id/txt_logmood"
                android:layout_width="281dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_simpleborder"
                android:drawableRight="@drawable/ic_angle_down"
                android:gravity="center_vertical"
                android:text="Add Additional Symptoms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TB_confuse" />

            <TextView
                android:id="@+id/txt_TimeLogMood"
                android:layout_width="281dp"
                android:layout_height="42dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_simpleborder"
                android:drawableRight="@drawable/ic_clock_three"
                android:gravity="center_vertical"
                android:text="Time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.514"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_logmood" />

            <EditText
                android:id="@+id/txt_descLogMood"
                android:layout_width="277dp"
                android:layout_height="139dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_simpleborder"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_TimeLogMood" />

            <Button
                android:id="@+id/btn_saveMoodLog"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_blue"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.514"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_descLogMood" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
