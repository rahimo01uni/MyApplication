<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ConfirmActivity.ConfirmMedicationActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/Card"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/CardRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="380dp"
            android:layout_height="425dp">


            <TextView
                android:id="@+id/textView24"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:paddingLeft="10dp"
                android:text="Time"
                android:textColor="@color/Labale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="24dp"
                android:paddingLeft="10dp"
                android:text="Doze"
                android:textColor="@color/Labale"
                app:layout_constraintStart_toEndOf="@+id/textView24"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="24dp"
                android:paddingLeft="10dp"
                android:text="Unit"
                android:textColor="@color/Labale"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="292dp"
                android:layout_height="27dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="32dp"
                android:paddingLeft="10dp"
                android:text="Note"
                android:textColor="@color/Labale"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_doze" />

            <TextView
                android:id="@+id/txt_doze"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/btn_simpleborder"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Doze"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/txt_unit"
                app:layout_constraintStart_toEndOf="@+id/txt_time"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />

            <TextView
                android:id="@+id/txt_notes"
                android:layout_width="294dp"
                android:layout_height="40dp"
                android:layout_marginStart="36dp"
                android:background="@drawable/btn_simpleborder"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Note"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_marginStart="36dp"
                android:background="@drawable/btn_simpleborder"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Time"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />


            <TextView
                android:id="@+id/txt_unit"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/btn_simpleborder"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Unit"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/txt_doze"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <Button
                android:id="@+id/btn_MConfirm"
                android:layout_width="281dp"
                android:layout_height="44dp"

                android:layout_marginTop="36dp"
                android:background="@drawable/btn_blue"
                android:text="Confirm"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.434"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_notes" />

            <TextView
                android:id="@+id/title"
                android:layout_width="203dp"
                android:layout_height="46dp"
                android:layout_marginStart="152dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="152dp"
                android:background="@drawable/btn_simpleborder"
                android:text="Aspirine"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>